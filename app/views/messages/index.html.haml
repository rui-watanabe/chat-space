.header-message
  グループを作成しました

.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        Sample
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
        =link_to "#" do
          = fa_icon 'edit', class: "side-header__box__menu__new-group__icon"
        %li.side-header__box__menu__edit-user
        =link_to "#" do
          = fa_icon 'cog', class: "side-header__box__menu__edit-user__icon"
  .groups
    =render "groups"

.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        test-group
      %ul.main-header__left-box__member-list
        %li.main-header__left-box__member-list__member
    =link_to '#', class: "main-header__edit-link" do
      = "Edit"
      .main-header__edit-btn
  .messages
    .message
      .message__upper-info
      = render "messages"
  .form
    %form.new_message
      .input-box
        %input.input-box__text
        %label.input-box__image
          = fa_icon 'image', class: "input-box__image__icon"
          %input.message-btn{type: "file"}
      .submit-botton
        Send